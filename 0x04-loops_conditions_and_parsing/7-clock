#!/usr/bin/env bash
# script that displays the time for 12 hours and 59 minutes: (using while loop)
# display hours from 0 to 12
# display minutes from 1 to 59
hour=0
while [ "$hour" -le 12 ]
do
	echo "Hour: $hour"
	minutes=1
	while [ "$minutes" -lt 60 ]
	do
		echo "$minutes"
		(( minutes++ ));
	done
	(( hour++ ));
done
